<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/learnFragment">

    <argument
        android:name="direction"
        app:argType="integer"
        android:defaultValue="0" />

    <fragment
        android:id="@+id/manageVocabularyGroupsFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.manage.ManageVocabularyGroupsFragment"
        android:label="fragment_manage_vocabulary_groups"
        tools:layout="@layout/fragment_manage_vocabulary_groups" >
        <action
            android:id="@+id/action_manageVocabularyGroupsFragment_to_navigation_create"
            app:destination="@id/createNewMainFragment" />
        <action
            android:id="@+id/action_manageVocabularyGroupsFragment_to_newVocabularyGroupFragment"
            app:destination="@id/newVocabularyGroupFragment" />
    </fragment>
    <fragment
        android:id="@+id/editVocabularyGroupFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.manage.EditVocabularyGroupFragment"
        android:label="fragment_edit_vocabulary_group"
        tools:layout="@layout/fragment_edit_vocabulary_group" >
        <action
            android:id="@+id/action_editVocabularyGroupFragment_to_manageVocabularyGroupsFragment"
            app:destination="@id/manageVocabularyGroupsFragment"
            app:popUpTo="@id/manageVocabularyGroupsFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="key_voc_group_with_name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="key_voc_group_name"
            app:argType="string"
            android:defaultValue=" " />
        <action
            android:id="@+id/action_editVocabularyGroupFragment_to_learnFragment"
            app:destination="@id/learnFragment"
            app:popUpTo="@id/learnFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="key_mode"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="voc_group_lang_type_known"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="voc_group_lang_type_new"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/manageLanguagesFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.manage.ManageLanguagesFragment"
        android:label="fragment_manage_languages"
        tools:layout="@layout/fragment_manage_languages" >
        <action
            android:id="@+id/action_manageLanguagesFragment_pop"
            app:popUpTo="@id/manageLanguagesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_navigationMain"
        app:destination="@id/learnFragment"
        app:popUpTo="@+id/learnFragment"
        app:popUpToInclusive="true"/>

    <!-- Navigation Create -->

    <fragment
        android:id="@+id/createNewMainFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.create.CreateNewMainFragment"
        android:label="fragment_create_new_main"
        tools:layout="@layout/fragment_create_new_main" >
        <action
            android:id="@+id/action_createNewMainFragment_to_newVocabularyGroupFragment"
            app:destination="@id/newVocabularyGroupFragment" />
        <action
            android:id="@+id/action_createNewMainFragment_to_newLessonFragment"
            app:destination="@id/newLessonFragment" />
        <action
            android:id="@+id/action_createNewMainFragment_to_importWithURLFragment"
            app:destination="@id/importWithURLFragment" />
        <action
            android:id="@+id/action_createNewMainFragment_to_importFragment"
            app:destination="@id/importFragment" />
        <action
            android:id="@+id/action_createNewMainFragment_to_importWithQrCodeFragment"
            app:destination="@id/importWithQrCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/importFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.create.ImportWithFileFragment"
        android:label="fragment_import"
        tools:layout="@layout/fragment_import_with_file" >
        <action
            android:id="@+id/action_importFragment_to_newVocabularyGroupFragment"
            app:destination="@id/newVocabularyGroupFragment" />
        <action
            android:id="@+id/action_importFragment_pop"
            app:popUpTo="@id/importFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/newLessonFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.create.CreateNewLessonFragment"
        android:label="fragment_new_lesson"
        tools:layout="@layout/fragment_new_lesson" />
    <fragment
        android:id="@+id/newVocabularyGroupFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.create.NewVocabularyGroupFragment"
        android:label="fragment_new_vocabulary_group"
        tools:layout="@layout/fragment_new_vocabulary_group" >
        <argument
            android:name="key_voc_group"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_newVocabularyGroupFragment_to_editVocabularyGroupFragment"
            app:destination="@id/editVocabularyGroupFragment" />
        <argument
            android:name="key_mode"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/importWithQrCodeFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.create.ImportWithQrCodeFragment"
        android:label="fragment_import_with_qr_code"
        tools:layout="@layout/fragment_import_with_qr_code" >
        <action
            android:id="@+id/action_importWithQrCodeFragment_to_newVocabularyGroupFragment"
            app:destination="@id/newVocabularyGroupFragment" />
        <action
            android:id="@+id/action_importWithQrCodeFragment_pop"
            app:popUpTo="@id/importWithQrCodeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/importWithURLFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.create.ImportWithUrlFragment"
        android:label="fragment_import_with_u_r_l"
        tools:layout="@layout/fragment_import_with_u_r_l" >
        <action
            android:id="@+id/action_importWithUrlFragment_to_newVocabularyGroupFragment"
            app:destination="@id/newVocabularyGroupFragment" />
        <action
            android:id="@+id/action_importWithURLFragment_pop"
            app:popUpTo="@id/importWithURLFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_newVocabularyGroupFragment"
        app:destination="@id/newVocabularyGroupFragment" />
    
    
    <fragment
        android:id="@+id/settingsFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settingsFragment_to_sourcesFragment"
            app:destination="@id/sourcesFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_manageLanguagesFragment"
            app:destination="@id/manageLanguagesFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_manageVocabularyGroupsFragment"
            app:destination="@id/manageVocabularyGroupsFragment" />
    </fragment>
    <fragment
        android:id="@+id/streakFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.StreakFragment"
        android:label="fragment_streak"
        tools:layout="@layout/fragment_streak" />
    <fragment
        android:id="@+id/learnFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.LearnFragment"
        android:label="fragment_learn"
        tools:layout="@layout/fragment_learn" />
    <action
        android:id="@+id/action_global_manageLessonFragment"
        app:destination="@id/manageLessonFragment" />
    <fragment
        android:id="@+id/sourcesFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.SourcesFragment"
        android:label="fragment_sources"
        tools:layout="@layout/fragment_sources" />
    <fragment
        android:id="@+id/manageLessonFragment"
        android:name="de.luki2811.dev.vokabeltrainer.ui.manage.ManageLessonFragment"
        android:label="ManageLessonFragment"
        tools:layout="@layout/fragment_new_lesson">

        <argument
            android:name="lesson_json"
            app:argType="string"
            android:defaultValue="{}" />
        <action
            android:id="@+id/action_manageLessonFragment_to_navigationMain"
            app:destination="@id/learnFragment"
            app:popUpTo="@id/learnFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action android:id="@+id/action_global_createNewMainFragment" app:destination="@id/createNewMainFragment" /><action android:id="@+id/action_global_importWithQrCodeFragment" app:destination="@id/importWithQrCodeFragment"/>

</navigation>