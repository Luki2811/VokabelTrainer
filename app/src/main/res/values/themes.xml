<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.VokabelTrainer.DynamicColors" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- <item name="android:windowLightStatusBar">?attr/isLightTheme</item> -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="fontFamily">@font/work_sans</item>
    </style>

    <style name="Theme.VokabelTrainer.DynamicColors.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.VokabelTrainer.DynamicColors.AppWidgetContainer" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="fontFamily">@font/work_sans</item>
    </style>
</resources>