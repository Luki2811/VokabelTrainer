<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewLessonActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/lection_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextLektionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/bsp_name_lection"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewNewLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/new_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextLektionName" />

    <RadioGroup
        android:id="@+id/radioGroupNew"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewLanguage">

        <RadioButton
            android:id="@+id/radioButton_new_german"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_german" />

        <RadioButton
            android:id="@+id/radioButton_new_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_english" />

        <RadioButton
            android:id="@+id/radioButton_new_swedish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_swedish" />

        <RadioButton
            android:id="@+id/radioButton_new_french"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_french" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupNative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNativeLanguage">

        <RadioButton
            android:id="@+id/radioButton_native_german"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_german" />

        <RadioButton
            android:id="@+id/radioButton_native_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_english" />

        <RadioButton
            android:id="@+id/radioButton_native_swedish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_swedish" />

        <RadioButton
            android:id="@+id/radioButton_native_french"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_french" />

    </RadioGroup>

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="checkAndGoNext"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupNative" />

    <TextView
        android:id="@+id/textViewNativeLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/native_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupNew" />


</androidx.constraintlayout.widget.ConstraintLayout>