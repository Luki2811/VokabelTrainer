<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manage.EditVocabularyGroupFragment">

    <TextView
        android:id="@+id/textViewVocabularyWordNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/new_word_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textEditVocabularyWordNewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVocabularyWordNew">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textEditVocabularyWordNewManage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint=""
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewVocabularyWordKnownManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/known_word_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditVocabularyWordNewLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextVocabularyWordKnownLayoutManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVocabularyWordKnownManage">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextVocabularyWordKnownManage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint=""
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewSettingsVocabularyWordManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextVocabularyWordKnownLayoutManage" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchVocabularyWordIgnoreCaseManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/ignore_case"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSettingsVocabularyWordManage" />

    <TextView
        android:id="@+id/textViewNumberOfVocManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="@string/number_voc_of_rest"
        app:layout_constraintEnd_toStartOf="@+id/buttonNextVocabularyWord"
        app:layout_constraintStart_toEndOf="@+id/buttonBackVocabularyWord"
        app:layout_constraintTop_toBottomOf="@+id/switchVocabularyWordIgnoreCaseManage" />

    <Button
        android:id="@+id/buttonDeleteVocabularyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/delete"
        android:text="@string/remove_vocabularyGroup"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        app:icon="@drawable/outline_delete_24"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaveAndGoBackManage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSaveAndGoBackManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/save"
        style="@style/Widget.Material3.Button.Icon"
        app:icon="@drawable/ic_outline_save_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/buttonNextVocabularyWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:background="@drawable/rounded_blue_button"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchVocabularyWordIgnoreCaseManage"
        app:tint="@color/white"/>

    <ImageButton
        android:id="@+id/buttonDeleteVocabularyWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_red_button"
        android:padding="8dp"
        android:src="@drawable/outline_delete_24"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddNewVocabularyWordManage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumberOfVocManage"
        app:tint="@color/White" />

    <ImageButton
        android:id="@+id/buttonAddNewVocabularyWordManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_green_button"
        android:padding="8dp"
        android:src="@drawable/ic_outline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonDeleteVocabularyWord"
        app:layout_constraintTop_toBottomOf="@+id/buttonNextVocabularyWord"
        app:tint="@color/White"/>

    <ImageButton
        android:id="@+id/buttonBackVocabularyWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@drawable/rounded_blue_button"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchVocabularyWordIgnoreCaseManage"
        app:tint="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>