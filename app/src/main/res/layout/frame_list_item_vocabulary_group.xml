<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/textViewlistVocabularyGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/dividerListItemVocabularyGroup"
        app:layout_constraintEnd_toStartOf="@+id/buttonShowQrCodeVocabularyGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name der Vokabelgruppe" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEditVocabularyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        style="@style/Widget.Material3.Button.IconButton"
        app:layout_constraintBottom_toBottomOf="@id/dividerListItemVocabularyGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/Blue"
        app:icon="@drawable/ic_outline_edit_24"
        app:contentDescription="@string/edit"
        app:iconTint="@color/White" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonShareVocabularyGroup"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/Orange"
        app:contentDescription="@string/share"
        app:icon="@drawable/ic_baseline_share_24"
        app:iconTint="@color/White"
        app:layout_constraintBottom_toBottomOf="@id/dividerListItemVocabularyGroup"
        app:layout_constraintEnd_toStartOf="@+id/buttonEditVocabularyGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonShowQrCodeVocabularyGroup"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/Green"
        app:contentDescription="@string/qr_code"
        app:icon="@drawable/ic_baseline_qr_code_24"
        app:iconTint="@color/White"
        app:layout_constraintBottom_toBottomOf="@id/dividerListItemVocabularyGroup"
        app:layout_constraintEnd_toStartOf="@+id/buttonShareVocabularyGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerListItemVocabularyGroup"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:background="@color/Gray"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>