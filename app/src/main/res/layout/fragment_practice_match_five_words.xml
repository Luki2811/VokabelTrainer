<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.practice.PracticeMatchFiveWordsFragment">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupLearnNativeLan"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chipGroupLearnNewLan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip0LearnNativeLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc0" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1LearnNativeLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc1" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2LearnNativeLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3LearnNativeLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc3" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4LearnNativeLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc4" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupLearnNewLan"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="right"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chipGroupLearnNativeLan"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip0LearnNewLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc0" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1LearnNewLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc1" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2LearnNewLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3LearnNewLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc3" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4LearnNewLan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/word_selection_height"

            android:checkable="true"
            android:clickable="true"
            android:gravity="center"
            android:textAlignment="center"
            tools:text="voc4" />


    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textViewPracticeInfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/find_fitting_words"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>